<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_import_stock_price_line_form" model="ir.ui.view">
        <field name="name">import.stock.price.line.form</field>
        <field name="model">import.stock.price.line</field>
        <field name="arch" type="xml">
            <form string="Actualizador de Costos de Transferencia">
                <group>
                    <field name="picking_id" readonly="1" attrs="{'invisible': [('stock_move_ids','!=',False)]}"/>
                    <field name="stock_move_ids" readonly="1" attrs="{'invisible': [('picking_id','!=',False)]}"/>
                    <field name="file" filename="name_file"/>
                    <field name="crear_lote_si_no_existe" />
                    <field name="forzar_actualizacion" />
                </group>
                <footer>
                    <button name="download_template" string="Descargar Plantilla" icon="fa-download" type="object" class="btn-primary oe_inline"/>
                    <button name="update_price" string="Actualizar" type="object" class="btn-primary oe_inline" context="{'type':'move'}"/>
            		o
                    <button string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
