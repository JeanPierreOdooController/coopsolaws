<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_picking_make_invoice_form" model="ir.ui.view">
		<field name="name">picking.make.invoice.form</field>
		<field name="model">stock.picking</field>
		<field name="inherit_id" ref="stock.view_picking_form"/>
		<field name="arch" type="xml">
			<xpath expr="//form/header" position="inside">
				<button name="make_invoice_from_picking" string="Crear Factura" class="oe_highlight" type="object" attrs="{
					'invisible':['|',('state','!=','done'),('invoice_id','!=',False)]
					}"/>
			</xpath>
		</field>
	</record>
</odoo>