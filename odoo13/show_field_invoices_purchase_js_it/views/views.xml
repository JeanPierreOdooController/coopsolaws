<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_inherit_invice" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//page[1]" position="after">
                        <page string="Facturas"  groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras">
                            <field name="invoice_ids"  readonly="0"/>
                        </page>
                    </xpath>

            </field>
    </record>

    <record id="picking_inherit_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='currency_id']" position="after">
                       <field name="search_force_po"
                              groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras" />
                       <field name="purchase_it2"   attrs="{'invisible':[('search_force_po','!=',True)]}"
                              groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras" />
                       <field name="purchase_it"   domain="[('invoice_count','=',0)]"
                              attrs="{'invisible':[('search_force_po','=',True)]}"
                              groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras" />
                       <field name="invoice_origin"  readonly="0"  groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras" />
                </xpath>

                <xpath expr="/form/sheet/notebook/page[1]/field[@name='invoice_line_ids']" position="before">
                        <field name="edit_lines_it"   invisible="1"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[1]/field[@name='invoice_line_ids']" position="attributes">
                        <attribute name="attrs">{'readonly':[('edit_lines_it','!=',True)]}</attribute>
                </xpath>



                <xpath expr="/form/sheet/notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='currency_id']" position="after">
                        <field name="purchase_it" invisible="1"  groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras"/>
                        <field name="purchase_line_id"  readonly="0" optional="hide" domain="[('order_id','=',purchase_it)]"
                         groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras" />
                        <field name="sale_line_ids"  readonly="0" optional="hide"
                         groups="show_field_invoices_purchase_js_it.group_vincular_facturas_compras" />
                </xpath>

            </field>
    </record>


</odoo>