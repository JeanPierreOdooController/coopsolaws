<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="view_costs_sales_analysis_book_detail_tree" model="ir.ui.view">
            <field name="name">costs.sales.analysis.book.detail.tree</field>
            <field name="model">costs.sales.analysis.book.detail</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Analsis Costo de Venta Detalle" create="false">
                    <field name="almacen"/>
                    <field name="origen"/>
                    <field name="destino"/>
                    <field name="doc"/>
                    <field name="date"/>
                    <field name="producto"/>
                    <field name="cantidad" sum="cantidad"/>
                    <field name="valor" sum="valor"/>
					<field name="valuation_account_id"/>
                    <field name="input_account_id"/>
                    <field name="output_account_id"/>
                </tree>
            </field>
        </record>

        <record id="costs_sales_analysis_book_detail_search" model="ir.ui.view">
            <field name="name">costs.sales.analysis.book.detail.search</field>
            <field name="model">costs.sales.analysis.book.detail</field>
            <field name="arch" type="xml">
                <search string="Analsis Costo de Venta Detalle">
                    <field name="almacen"/>
                    <field name="producto"/>
					<field name="valuation_account_id"/>
                    <field name="input_account_id"/>
                    <separator/>
                    <group expand="1" string="Group By...">
                        <filter string="Almacen" name="almacen" icon="terp-partner" context="{'group_by':'almacen'}"/>
                        <filter string="Producto" name="producto" icon="terp-partner" context="{'group_by':'producto'}"/>
                        <filter string="Cuenta Producto" name="valuation_account_id" icon="terp-partner" context="{'group_by':'valuation_account_id'}"/>
                        <filter string="Cuenta Variacion" name="input_account_id" icon="terp-partner" context="{'group_by':'input_account_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_costs_sales_analysis_book_detail_it" model="ir.actions.act_window">
            <field name="name">Analsis Costo de Venta Detalle</field>
            <field name="res_model">costs.sales.analysis.book.detail</field>
            <field name="view_id" ref="view_costs_sales_analysis_book_detail_tree"/>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="costs_sales_analysis_book_detail_search"/>
        </record>

    </data>
</odoo>