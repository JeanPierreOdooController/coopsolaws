<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_payslip_line_view_pivot" model="ir.ui.view">
        <field name="name">hr.payslip.line.view.pivot</field>
        <field name="model">hr.payslip.line</field>
        <field name="arch" type="xml">
            <pivot string="Planilla" disable_linking="true">
                <field name="employee_id" type="row" />
                <!-- <field name="lote_name" type="row" /> -->
                <field name="salary_rule_id" type="col" />
                <field name="total" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="hr_payslip_line_tabular_action" model="ir.actions.act_window">
        <field name="name">Vista Pivot</field>
        <field name="res_model">hr.payslip.line</field>
        <field name="view_mode">pivot</field>
        <!-- <field name="view_id" ref="hr_payslip_line_test_view_tree" /> -->
    </record>

    <menuitem
        id="hr_payslip_line_tabular_menu"
        name="Planilla Tabular"
        sequence="20"
        action="payslip_tabular_it.hr_payslip_line_tabular_action"
        parent="hr_payroll.menu_hr_payroll_report"
    />

</odoo>
