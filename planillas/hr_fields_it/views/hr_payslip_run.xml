<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr_payslip_run_form_inherit" model="ir.ui.view">
			<field name="name">hr.payslip.run.form.inherit</field>
			<field name="model">hr.payslip.run</field>
			<field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
			<field name="arch" type="xml">
				<xpath expr="//header" position="inside">
					<button name="get_employees_news" string="Agregar Empleados" states="verify" type="object" class="oe_highlight"/>
					<button name="set_draft" string="Volver a Borrador" type="object" states="verify" confirm="Volver Borrador este Lote eliminara todas las Nominas que existen actualmente Â¿Esta seguro que desea hacer esto?"/>
					<button name="compute_wds_by_lot" string="Dias Laborados" type="object" class="oe_highlight" states="verify"/>
					<button name="recompute_payslips" string="Recalcular" type="object" class="oe_highlight" states="verify"/>
					<button name="tab_payroll" string="Planilla Tabular" type="object" class="oe_highlight" attrs="{'invisible':[('state','not in',['verify','close'])]}"/>
					<button name="close_payroll" string="Cerrar" type="object" class="oe_highlight" states="verify" groups="hr_fields_it.group_hr_manager"/>
					<button name="reopen_payroll" string="Reabrir Planilla" type="object" class="oe_highlight" states="close" groups="hr_fields_it.group_hr_manager"/>
				</xpath>
				<button name="action_validate" position="attributes">
					<attribute name="invisible">1</attribute>
				</button>
				<field name="credit_note" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<field name="company_id" position="after">
					<field name="calcular_af"/>
				</field>
				<xpath expr="//sheet/group/group[1]" position="inside">
					<field name="type_id" attrs="{'readonly':[('state','not in',['draft'])]}" options="{'no_create': True, 'no_create_edit':True}"/>
					<field name="partner_id" attrs="{'readonly':[('state','not in',['draft'])]}" options="{'no_create': True, 'no_create_edit':True}"/>
					<field name="contract_type" attrs="{'readonly':[('state','not in',['draft'])]}"/>
				</xpath>
				<xpath expr="//sheet" position="inside">
					<field name="slip_ids">
						<tree create="0">
							<field name="number" optional="hide"/>
							<field name="identification_id" optional="hide"/>
							<field name="employee_id"/>
							<field name="income" optional="show"/>
							<field name="worker_contributions" optional="show"/>
							<field name="net_wage" optional="show"/>
							<field name="net_discounts" optional="show"/>
							<field name="net_to_pay" optional="show"/>
							<field name="employer_contributions" optional="show"/>
							<field name="state" optional="show"/>
						</tree>
					</field>
				</xpath>
			</field>
		</record>
		<record id="hr_payslip_run_tree_inherit" model="ir.ui.view">
			<field name="name">hr.payslip.run.tree.inherit</field>
			<field name="model">hr.payslip.run</field>
			<field name="inherit_id" ref="hr_payroll.hr_payslip_run_tree"/>
			<field name="arch" type="xml">
				<field name="credit_note" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
				<field name="name" position="after">
					<field name="type_id"/>
					<field name="partner_id"/>
				</field>
			</field>
		</record>
		<record id="tab_hr_payslip_run" model="ir.actions.server">
			<field name="name">Planilla Tabular</field>
			<field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
			<field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
			<field name="state">code</field>
			<field name="code">action = records.tab_payroll()</field>
		</record>

		<record id="hr_payroll.menu_hr_payslip_run" model="ir.ui.menu" >
			<field name="name">Planillas Mensuales</field>
		</record>


<!--    menus que filtran el tipo de planilla-->
    <record id="hr_payroll.action_hr_payslip_run_tree" model="ir.actions.act_window">
        <field name="name">Planillas Mensuales</field>
        <field name="res_model">hr.payslip.run</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="hr_payroll.hr_payslip_run_filter"/>
        <field name="domain">[('type_id.default_schedule_pay', '=', 'monthly')]</field>
    </record>

    <record id="action_hr_payslip_run_tree_quincenal" model="ir.actions.act_window">
        <field name="name">Planillas Quincenales</field>
        <field name="res_model">hr.payslip.run</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="hr_payroll.hr_payslip_run_filter"/>
        <field name="domain">[('type_id.default_schedule_pay', '=', 'bi-weekly')]</field>
    </record>

    <menuitem id="menu_hr_payslip_run_quincenal"
              action="action_hr_payslip_run_tree_quincenal"
              parent="hr_payroll.menu_hr_payroll_payslips"
              groups="hr_base_it.group_hr_tables_root"
              sequence="90"/>

    <record id="action_hr_payslip_run_tree_semanal" model="ir.actions.act_window">
        <field name="name">Planillas Semanales</field>
        <field name="res_model">hr.payslip.run</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="hr_payroll.hr_payslip_run_filter"/>
        <field name="domain">[('type_id.default_schedule_pay', '=', 'weekly')]</field>
    </record>

    <menuitem id="menu_hr_payslip_run_semanal"
              action="action_hr_payslip_run_tree_semanal"
              parent="hr_payroll.menu_hr_payroll_payslips"
              groups="hr_base_it.group_hr_tables_root"
              sequence="95"/>
	</data>
</odoo>