<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="group_hr_payslip_run_consolidado" model="res.groups">
			<field name="name">Generar Planillas Consolidadas</field>
			<field name="category_id" ref="base.module_category_human_resources_payroll"/>
			<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
		</record>
		<record id="hr_resumen_planilla_company_rule" model="ir.rule">
			<field name="name">Non Shared Records: Payroll Consolidado</field>
			<field name="model_id" ref="model_hr_resumen_planilla"/>
			<field name="global" eval="True"/>
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>
		<record id="hr_resumen_planilla_line_company_rule" model="ir.rule">
			<field name="name">Non Shared Records: Payroll Consolidado Line</field>
			<field name="model_id" ref="hr_resumen_planilla_it.model_hr_resumen_planilla_line"/>
			<field name="global" eval="True"/>
			<field name="domain_force">
				[('company_id', 'in', company_ids)]
			</field>
		</record>

	</data>
</odoo>