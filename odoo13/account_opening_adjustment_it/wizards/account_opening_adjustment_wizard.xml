<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_opening_adjustment_wizard_form" model="ir.ui.view">
        <field name="name">account_opening_adjustment_wizard.form</field>
        <field name="model">account.opening.adjustment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group string="Datos Generales">
                    <group>
                        <field name="company_id" required="1"/>
                        <field name="period_from_id" required="1"/>
                        <field name="period_to_id" required="1"/>
                    </group>
                    <group>
                        <field name="journal_id" required="1"/>
                        <field name="date" required="1"/>
                        <field name="profit_account_id" required="1"/>
                        <field name="loss_account_id" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="preview" string="Vista Preliminar" type="object" class="oe_highlight"/>
                    <button name="get_move" string="Generar Asiento" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_opening_adjustment_wizard" model="ir.actions.act_window">
        <field name="name">Diferencias Facturas Pagadas</field>
        <field name="res_model">account.opening.adjustment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_opening_adjustment_wizard"
              parent="l10n_pe_currency_rate.menu_account_sunat_currency_rate" 
              action="action_account_opening_adjustment_wizard"
              groups="account.group_account_manager"
              sequence="11"/>
</odoo>
