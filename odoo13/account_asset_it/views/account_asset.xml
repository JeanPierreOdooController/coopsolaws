<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_account_move_asset_form">
        <field name="name">account.asset.form.asset</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='original_move_line_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//page[@name='related_items']" position="after">
                <page string="Otra InformaciÃ³n" name="other_info">
                    <group>
                        <group>
                            <field name="partner_id_it"/>
                            <field name="type_document_id"/>
                            <field name="nro_comp"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.server" id="action_copy_comprobante_account_asset">
		<field name="name">Completar datos</field>
		<field name="model_id" ref="account_asset.model_account_asset"/>
		<field name="binding_model_id" ref="account_asset.model_account_asset" />
		<field name="state">code</field>
		<field name="code">action = records.action_copy_comprobante()</field>
	</record>

    <record model="ir.actions.server" id="action_update_amount_account_asset">
		<field name="name">Actualizar montos</field>
		<field name="model_id" ref="account_asset.model_account_asset"/>
		<field name="binding_model_id" ref="account_asset.model_account_asset" />
		<field name="state">code</field>
		<field name="code">action = records.action_update_amount()</field>
	</record>


</odoo>
