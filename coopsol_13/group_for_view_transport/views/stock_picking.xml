<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	   <record id="view_picking_form_inherit_manager" model="ir.ui.view">
			<field name="name">stock.picking.form.inherit.manager</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock_picking_note.view_picking_form"/>
			<field name="groups_id" eval="[(6, 0, [ref('group_for_view_transport.group_manager_page_transport') ])]" />
			<field name="arch" type="xml">
				<xpath expr="//notebook/page[@name='transport']" position="replace">
					<page string="Transporte" name="transport">
						<group>
							<group>
								<field name="carrier_id_it"/>
								<field name="vehicle_id"/>
								<field name="driver_id"/>
								<field name="type_of_transport"/>
							</group>
							<group>
								<field name="reason_transfer"/>
								<field name="starting_point"/>
								<field name="ending_point"/>
								<field name="transfer_date"/>
							</group>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>