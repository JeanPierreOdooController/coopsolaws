<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[@id='invoice_tab']//field[@name='product_uom_id']" position="after">
                    <field name="cost_kardex" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[@name='order_lines']//tree//field[@name='product_uom']" position="after">
                    <field name="cost_kardex" optional="show"/>
                    <field name="cost_kardex_dolar" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>