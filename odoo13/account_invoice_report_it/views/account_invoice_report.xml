<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_account_invoice_report_tree" model="ir.ui.view">
			<field name="name">account.invoice.report.tree</field>
			<field name="model">account.invoice.report</field>
			<field name="arch" type="xml">
				<tree string="Invoices Analysis" create="false">
					<field name="move_id"/>
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="company_id"/>
                    <field name="currency_id"/>
                    <field name="partner_id"/>
                    <field name="commercial_partner_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                    <field name="invoice_user_id"/>
                    <field name="type" optional="hide"/>
                    <field name="state"/>
                    <field name="invoice_payment_state"/>
                    <field name="fiscal_position_id" optional="hide"/>
                    <field name="invoice_date"/>
                    <field name="invoice_payment_term_id" optional="hide"/>
                    <field name="invoice_partner_bank_id" optional="hide"/>
                    <field name="nbr_lines" optional="hide"/>
                    <field name="residual" optional="hide"/>
                    <field name="amount_total"/>
                    <field name="quantity"/>
                    <field name="product_id"/>
                    <field name="product_uom_id"/>
                    <field name="product_categ_id" optional="hide"/>
                    <field name="invoice_date_due"/>
                    <field name="account_id"/>
                    <field name="analytic_account_id" optional="hide"/>
                    <field name="price_subtotal" sum="price_subtotal"/>
                    <field name="price_average" optional="hide"/>
				</tree>
			</field>
		</record>

		<record id="account.action_account_invoice_report_all" model="ir.actions.act_window">
			<field name="view_mode">tree,graph,pivot</field>
			<field name="view_id" ref="view_account_invoice_report_tree"/>
			<field name="context">{'search_default_current':1, 'search_default_customer': 1, 'group_by':['invoice_date']}</field>
		</record>

		<record id="account.action_account_invoice_report_all_supp" model="ir.actions.act_window">
			<field name="view_mode">tree,graph,pivot</field>
			<field name="view_id" ref="view_account_invoice_report_tree"/>
			<field name="context">{'search_default_current':1, 'search_default_supplier': 1, 'group_by':['invoice_date']}</field>
		</record>

		<menuitem id="menu_sale_action_account_invoice_report_all"
            name="Facturas"
            action="account.action_account_invoice_report_all"
            parent="sale.menu_sale_report"
            sequence="30"/>

	</data>
</odoo>